# File Location: ~/.bash_profile
# Run the following to download and initialize:
# curl -o ~/.bash_profile https://raw.githubusercontent.com/mindovermiles262/bash/master/public-bash-profile && source ~/.bash_profile

if [[ "$OSTYPE" == 'linux'* ]]; then
  echo Hello Linux
  alias linux-upgrade="sudo apt-get update && sudo apt-get -y upgrade && sudo apt-get -y dist-upgrade && clear && printf 'Linux Has Been Updated\n  {apt-get update}\n  {apt-get upgrade}\n  {apt-get dist-upgrade}\n'"
fi

# File Aliases
alias ll="ls -lha"
alias la="ls -lha"
alias l="ls -lh"

# Add Python Aliases
alias pip="pip3"
alias py="python3"

# Add Rails Aliases
alias reset="rails db:migrate:reset; rails db:seed"
alias migrate="rails db:migrate"
alias seed="rails db:seed"

# Download VIM-Plug and initialize in ~/.vim/autoload
alias vim-init="curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"

# Download and update program profiles
alias vim-update="curl -o ~/.vimrc https://raw.githubusercontent.com/mindovermiles262/vim/master/vimrc"
alias bash-update="curl -o ~/.bash_profile https://raw.githubusercontent.com/mindovermiles262/bash/master/public-bash-profile && source ~/.bash_profile && clear && echo Bash Updated"
